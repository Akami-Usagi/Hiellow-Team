@page
@model HogarGestor.App.Presentacion.Pages_BDMedicos.JovenesAsignadosModel
@{
}
<h1>Jovenes a cargo de @(Model.medico.Nombre + " " + Model.medico.Apellidos)</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Telefono</th>
            <th scope="col">Genero</th>
            <th scope="col">Historia</th>
        </tr>
    </thead>
    @foreach (var joven in Model.Jovenes)
    {
        <tbody>
        
            <tr>
                
                <td>@joven.Nombre</td>
                <td>@joven.Apellidos</td>
                <td>@joven.NumeroTelefono</td>
                <td>@joven.Genero</td>
                <td>
                         
                    <a asp-page = ".\ListaPatrones" asp-route-id = "@joven.Id" title="Ver Patrones de Crecimiento" style="text-decoration: none">
                        <span class="material-icons" style="color: white; text-decoration-line: none">data_saver_off</span>
                    </a>
                    <a asp-page = ".\SugerenciaCuidado" asp-route-id = "@joven.Id" title="Ingresar Sugerencia de Cuidado" style="text-decoration: none">
                        <span class="material-icons" style="color: white; text-decoration-line: none">post_add</span>
                    </a>
                                             
                </td>
                
            </tr>
        
        </tbody>
    }
</table>
<div>
    <a type="button" class="btn btn-secondary btn-lg"  asp-page="./Index">Regresar</a>
</div>