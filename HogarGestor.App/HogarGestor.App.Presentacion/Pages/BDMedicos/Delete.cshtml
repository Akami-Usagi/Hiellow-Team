@page
@model HogarGestor.App.Presentacion.Pages_BDMedicos.DeleteModel
@{
}
<h1>Seguro que desea eliminar el siguiente Medico?</h1>
<br>
<div>
    
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.medico.Nombre</dd>
        <dt class="col-sm-2">Apellidos</dt>
        <dd class="col-sm-10">@Model.medico.Apellidos</dd>
        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.medico.Documento</dd>
        <dt class="col-sm-2">Especialidad</dt>
        <dd class="col-sm-10">@Model.medico.EspecialidadMedica</dd>
        <dt class="col-sm-2">Genero</dt>
        <dd class="col-sm-10">@Model.medico.Genero</dd>
        <dt class="col-sm-2">Telefono</dt>
        <dd class="col-sm-10">@Model.medico.NumeroTelefono</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="medico.Id">
    <button type="submit" class="btn btn-secondary btn-lg" asp-page-handler="Delete">Eliminar Medico</button>
    <a type="button" class="btn btn-secondary btn-lg" asp-page="./index">Cancelar</a>
</form>