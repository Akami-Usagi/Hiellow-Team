@page
@model HospiEnCasa.App.Presentacion.Pages_BDFamiliares.CreateModel
@{
}

<form method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="familiar.Nombre" placeholder="Ingrese El Nombre del Familiar" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Apellidos</label>
        <input asp-for="familiar.Apellido" placeholder="Ingrese Los Apellidos del Familiar" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Telefono</label>
        <input asp-for="familiar.Telefono" placeholder="Ingrese Telefono del Familiar" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Documento</label>
        <input asp-for="familiar.Documento" placeholder="Ingrese El Documento del Familiar" class="form-control">
    </div>
    <br>
    
    <div class="form-group">
        <label  class="control-label">Genero</label>
        <select asp-for="familiar.GeneroId" class="form-control" asp-items="Model.Options">
            <option value="">-- Selecione un Genero --</option>
        </select>
    </div>

    <br>
    <div class="form-group">
        <label>Parentesco</label>
        <input asp-for="familiar.Parentesco" placeholder="Ingrese El Parentesco Con El Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Correo Electronico</label>
        <input asp-for="familiar.Correo" placeholder="Ingrese El Correo Electronico del Familiar" class="form-control">
    </div>
    
    <br>
    <div>
    <button type="submit" class="btn btn-secondary btn-lg" asp-page-handler="Save">Crear</button>
    <a type="button" class="btn btn-secondary btn-lg" asp-page="./index">Cancelar</a>
    </div>
</form>
