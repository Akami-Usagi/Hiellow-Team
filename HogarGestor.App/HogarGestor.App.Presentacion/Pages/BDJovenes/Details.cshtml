@page
@model HospiEnCasa.App.Presentacion.Pages_BDJovenes.DetailsModel
@{
}

<h1>Informacion del joven</h1>
<br>
<div>
    
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.joven.Nombre</dd>
        <dt class="col-sm-2">Apellidos</dt>
        <dd class="col-sm-10">@Model.joven.Apellido</dd>
        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.joven.Documento</dd>
        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.joven.FechaNacimiento</dd>
        <dt class="col-sm-2">Genero</dt>
        <dd class="col-sm-10">@Model.joven.GeneroId</dd>
        <dt class="col-sm-2">Telefono</dt>
        <dd class="col-sm-10">@Model.joven.Telefono</dd>
        <dt class="col-sm-2">Direccion</dt>
        <dd class="col-sm-10">@Model.joven.Direccion</dd>
        <dt class="col-sm-2">Pediatra</dt>
        <dd class="col-sm-10">@(Model.joven.Pediatra.Nombre + " " + Model.joven.Pediatra.Apellido)</dd>
        <dt class="col-sm-2">Nutricionista</dt>
        <dd class="col-sm-10">@(Model.joven.Nutricionista.Nombre + " " + Model.joven.Nutricionista.Apellido)</dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-secondary btn-lg" asp-page="./index">Regresar</a>
</div>
