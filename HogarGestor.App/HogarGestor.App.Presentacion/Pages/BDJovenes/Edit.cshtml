@page
@model HogarGestor.App.Presentacion.Pages_BDJovenes.EditModel
@{
}

<h1>Editar informacion del Joven</h1>

<form method="post">

    <input type="hidden" asp-for="joven.Id">
    
    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="joven.Nombre" placeholder="Ingrese El Nombre del Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Apellidos</label>
        <input asp-for="joven.Apellidos" placeholder="Ingrese Los Apellidos del Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Telefono</label>
        <input asp-for="joven.NumeroTelefono" placeholder="Ingrese Telefono del Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Documento</label>
        <input asp-for="joven.Documento" placeholder="Ingrese El Documento del Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Genero</label>
        <select asp-for="joven.Genero"  class="form-control">
        <option selected>Genero...</option>
        <option value="0">Masculino</option>
        <option value="1">Femenino</option>
        <option value="2">Intersexual</option>
        </select>
    </div>
    <br>
    <div class="form-group">
        <label>Ciudad</label>
        <input asp-for="joven.Ciudad" placeholder="Ingrese La Ciudad del Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Direccion</label>
        <input asp-for="joven.Direccion" placeholder="Ingrese La Direccion del Joven" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <label>Fecha de Nacimiento</label>
        <input asp-for="joven.FechaNacimiento" placeholder="Ingrese La Fecha de Nacimiento del Joven" class="form-control">
    </div>

    <br>
    <div>
         <button type="submit" class="btn btn-secondary btn-lg" asp-page-handler="Edit">Actualizar Datos</button>
         <a type="button" class="btn btn-secondary btn-lg" asp-page="./index">Cancelar</a>
    </div>
</form>